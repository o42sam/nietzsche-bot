[Unit]
Description=Nietzsche Quote Bot - Automated X/Twitter Posting
After=network.target ollama.service
Wants=ollama.service

[Service]
Type=simple
User=YOUR_USERNAME
Group=YOUR_USERNAME
WorkingDirectory=/home/YOUR_USERNAME/nietzsche_bot

# Environment
EnvironmentFile=/home/YOUR_USERNAME/nietzsche_bot/.env

# Virtual environment Python
ExecStart=/home/YOUR_USERNAME/nietzsche_bot/venv/bin/python bot.py

# Restart policy
Restart=always
RestartSec=10

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=nietzsche-bot

# Security hardening (optional but recommended)
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=/home/YOUR_USERNAME/nietzsche_bot/logs

[Install]
WantedBy=multi-user.target
